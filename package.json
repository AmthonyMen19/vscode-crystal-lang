{
    "name": "crystal-lang",
    "displayName": "Crystal Language",
    "description": "The Crystal Programming Language",
    "version": "0.0.1",
    "publisher": "faustinoaq",
    "icon": "images/icon.svg",
    "license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/faustinoaq/vscode-crystal-lang"
	},
	"bugs": "https://github.com/faustinoaq/vscode-crystal-lang/issues",
    "engines": {
        "vscode": "^1.12.0"
    },
	"keywords": [
	    "crystal",
		"syntax",
		"languages"
	],
    "categories": [
        "Languages"
    ],
	"galleryBanner": {
		"color": "#000000",
		"theme": "dark"
    },
    "activationEvents": [
        "onLanguage:crystal"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [{
            "id": "crystal",
            "aliases": ["Crystal", "crystal"],
            "extensions": [".cr"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "crystal",
            "scopeName": "source.crystal",
            "path": "./syntaxes/crystal.tmLanguage"
        }],
        "snippets": [{
            "language": "crystal",
            "path": "./snippets/crystal.json"
        }]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}